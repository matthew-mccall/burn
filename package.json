{
  "name": "burn",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:popup": "tsc -b && vite build --config vite.popup.config.ts",
    "build:background": "tsc -b && vite build --config vite.background.config.ts",
